@model List<YourProjectNamespace.Models.UserViewModel>

@{
    ViewData["Title"] = "Danh Sách Nhân Viên";
}

<form method="post" asp-action="XoaNhieuNhanVien" id="deleteForm">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="/Home/Index" class="btn btn-secondary">Trang Chủ</a>
           <button type="button" class="btn btn-primary" onclick="window.location.href='/Home/ExportToPdf'">Lưu</button>

            <a href="/Home/ThemUser" class="btn btn-success">+</a>
            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete()">Xóa</button>
        </div>

        <!-- Bảng dữ liệu -->
        <table class="table table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th>STT</th>
                    <th>Họ và Tên</th>
                    <th>Email</th>
                    <th>Tình Trạng</th>
                    <th><input type="checkbox" id="checkAll"> Chọn tất cả</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int stt = 1;
                    foreach (var employee in Model)
                    {
                                <tr>
                                    <td>@stt</td>
                                    <td>@employee.HoVaTen</td>
                                    <td>@employee.Email</td>
                                    <td>@(employee.Role == 0 ? "Admin" : "User")</td>
                                    <td><input type="checkbox" name="selectedEmployees" value="@employee.Username"></td>
                                </tr>
                        stt++;
                    }
                }
            </tbody>
        </table>

       <!-- Thanh phân trang -->
    <nav>
        <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("NhanVien", new { page = i })">@i</a>
                    </li>
                }
        </ul>
    </nav>
    </div>
</form>

<script>
    $(document).ready(function () {
        $('#checkAll').click(function () {
            $('tbody input[type="checkbox"]').prop('checked', this.checked);
        });
    });

    function confirmDelete() {
        if ($('tbody input[type="checkbox"]:checked').length > 0) {
            if (confirm('Bạn có chắc chắn muốn xóa các nhân viên đã chọn không?')) {
                $('#deleteForm').submit();
            }
        } else {
            alert('Vui lòng chọn ít nhất một nhân viên để xóa.');
        }
    }
</script>
