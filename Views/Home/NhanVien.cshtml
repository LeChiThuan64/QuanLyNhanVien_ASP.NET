@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Danh Sách Nhân Viên";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a href="/Home/Index" class="btn btn-secondary">Trang Chủ</a>
@*             <button class="btn btn-primary ml-2">Lưu</button> *@
<button class="btn btn-primary ml-2" onclick="window.location.href='/Home/ExportToPdf'">Lưu</button>

      
                 <a href="/Home/ThemUser" class="btn btn-success ml-2">+</a>
               <a href="#" class="btn btn-warning btn-sm">Sửa</a>
                            <a href="#" class="btn btn-danger btn-sm">Xóa</a>
        </div>
        <input type="text" class="form-control" placeholder="Tìm kiếm nhân viên ..." style="width: 200px;">
    </div>

    <!-- Bảng hiển thị -->
    <table class="table table-bordered text-center">
        <thead class="thead-dark">
            <tr>
                <th>STT</th>
                <th>Họ và Tên</th>
                <th>Email</th>
                <th>Tình Trạng</th>
                <th>
                    <input type="checkbox"> Chọn tất cả
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var nhanVien in Model)
            {
                    <tr>
                        <td>@nhanVien.STT</td>
                        <td>@nhanVien.HoVaTen</td>
                        <td>@nhanVien.Email</td>
                        <td>@nhanVien.TinhTrang</td>
                        <td><input type="checkbox"></td>
                    </tr>
            }
        </tbody>
    </table>
</div>
